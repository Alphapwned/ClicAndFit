{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<h1 class="text-center">Listes des annonces</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Numéro de téléphone</th>
                <th>code postal</th>
                <th>Date de parution</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.title }}</td>
                <td>{{ annonce.description }}</td>
                <td>{{ annonce.phone }}</td>
                <td>{{ annonce.zipcode }}</td>
                <td>{{ annonce.date ? annonce.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_annonces_show', {'id': annonce.id}) }}">Détail</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Il n'y a pas d'annonces à afficher</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div>
        {{ knp_pagination_render(annonces) }}
        <p>Il y a actuellement {{ annonces.getTotalItemCount }} annonces sur le site.</p>
    </div>
    {% if app.user %}
        <a href="{{ path('app_annonces_new') }}">Créer une nouvelle annonce</a>
    {% endif %}
{% endblock %}
